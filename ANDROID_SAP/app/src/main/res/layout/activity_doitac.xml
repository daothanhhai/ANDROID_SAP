<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="10dp"
    android:weightSum="10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_doitac">
    <LinearLayout

        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText

            android:id="@+id/edittimkiemdt"
            android:hint="Tìm kiếm"
            android:drawableLeft="@drawable/zoom"
            android:background="@drawable/botronsearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_weight="3"
            android:paddingLeft="20dp"
            android:background="#00BCD4"
            android:textColor="#F4F3F3"
            android:text="Đối tượng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:textStyle="bold"
            android:layout_weight="3"
            android:paddingLeft="85dp"
            android:background="#00BCD4"
            android:textColor="#F4F3F3"
            android:text="Đối tác"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:paddingLeft="85dp"
            android:background="#00BCD4"
            android:textColor="#F4F3F3"
            android:text="Địa chỉ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:textStyle="bold"
            android:layout_weight="2"
            android:paddingLeft="80dp"
            android:background="#00BCD4"
            android:textColor="#F4F3F3"
            android:text="Ngày sinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>


    <LinearLayout

        android:layout_weight="5"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView

            android:id="@+id/listviewdoitac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>