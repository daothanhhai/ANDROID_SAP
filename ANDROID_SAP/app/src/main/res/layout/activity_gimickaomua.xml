<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_gimickaomua">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTexttngmamtdv"
            android:hint="Từ ngày"
            android:textSize="11dp"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextdngmamtdv"
            android:hint="Đến Ngày"
            android:textSize="11dp"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:ems="8"
            android:inputType="textPersonName" />

        <AutoCompleteTextView
            android:id="@+id/actkhgmamtdv"
            android:textSize="11dp"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:ems="5"
            android:hint="Đối tượng"
            android:text="" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagegmamtdv"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>
