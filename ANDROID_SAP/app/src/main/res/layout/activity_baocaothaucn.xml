<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_baocaothaucn">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:id="@+id/edittexttnbctcn"
            android:hint="Từ ngày"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edittextdnbctcn"
            android:hint="Đến Ngày"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />

        <AutoCompleteTextView
            android:layout_weight="8"
            android:id="@+id/actbctcn"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Ma Đt"
            android:text="" />

        <ImageView
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagebctcn"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>

        <Button
            android:layout_weight="0"
            android:background="@drawable/botronsearch"
            android:id="@+id/buttonbctcn"
            android:text="Xem BC"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>


        <ExpandableListView
            android:id="@+id/ExpandableListView"
            android:divider="@color/colorAccent"
            android:dividerHeight="1dp"
            android:scrollbars="none"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ExpandableListView>
</LinearLayout>