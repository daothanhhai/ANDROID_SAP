<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_tongquangdoanhthu">

    <LinearLayout
        android:layout_weight="0"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <AutoCompleteTextView
                android:layout_weight="5"
                android:id="@+id/atcthang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Tháng" />

            <ImageView
                android:id="@+id/imgthang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@+id/atcthang"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_keyboard_arrow_down_black_18dp" />

            <AutoCompleteTextView
                android:layout_weight="5"
                android:id="@+id/atcnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Năm"
                android:text="" />

            <ImageView
                android:id="@+id/imgnam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintStart_toStartOf="@+id/atcnam"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/baseline_keyboard_arrow_down_black_18dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:weightSum="10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="0"
                android:id="@+id/textViewsodonhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bardttuan"
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.github.mikephil.charting.charts.BarChart>

            <TextView
                android:layout_weight="0"
                android:id="@+id/textViewtongdoanhthu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="TextView"
                android:textAlignment="center"
                android:textColor="#00BCD4"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_weight="3"
        android:id="@+id/linearLayout1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bardttuan"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="THỐNG KÊ TRONG NGÀY" />
        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="4"
                android:textSize="17dp"
                android:background="#8BC34A"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/textviewkhtrongngay"
                android:text="Khách Hàng Bán"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewdttrongngay"
                android:layout_weight="3"
                android:textSize="17dp"
                android:textStyle="bold"
                android:background="#9E9E8F"
                android:text="Khách Hàng Bán"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewhdtrongngay"
                android:textSize="17dp"
                android:text="Khách Hàng Bán"
                android:background="#00BCD4"
                android:textStyle="bold"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textSize="17dp"
                android:background="#2196F3"
                android:layout_weight="4"
                android:textAlignment="center"
                android:textStyle="bold"
                android:id="@+id/textviewdhtrongngay"
                android:text="Khách Hàng Bán"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewdhhtrongngay"
                android:layout_weight="3"
                android:textSize="17dp"
                android:textStyle="bold"
                android:background="#D5D531"
                android:text="Khách Hàng Bán"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textviewdhttrongngay"
                android:background="#FF9800"
                android:textSize="17dp"
                android:text="Khách Hàng Bán"
                android:textStyle="bold"
                android:layout_weight="3"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </LinearLayout>

    </LinearLayout>



</LinearLayout>