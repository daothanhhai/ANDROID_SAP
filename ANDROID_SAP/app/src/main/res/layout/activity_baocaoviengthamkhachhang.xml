<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity_baocaoviengthamkhachhang">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_weight="2"
            android:id="@+id/editTexttnbcvtkh"
            android:hint="Từ Ngày"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName"/>
        <EditText
            android:layout_weight="2"
            android:id="@+id/editTextdnbcvtkh"
            android:hint="Đến Ngày"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />


        <AutoCompleteTextView
            android:layout_weight="4"
            android:id="@+id/actbcvtkh"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Ma Đt"
            android:text="" />

        <ImageView
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagebcvtkh"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>


        <Button
            android:layout_weight="2"
            android:id="@+id/buttonbcvtkh"
            android:text="Xem BC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <AutoCompleteTextView
            android:layout_weight="4"
            android:id="@+id/acttdvvtkh1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="TDV"
            android:text="" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagetdvvtkh1"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>


        <AutoCompleteTextView
            android:layout_weight="4"
            android:id="@+id/acttbhvtkh1"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="TUYẾN BH"
            android:text="" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagetbhvtkh1"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>


    </LinearLayout>





    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout

                    android:id="@+id/tbbcvtkh"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_alignParentStart="true"
                    android:stretchColumns="*"
                    android:background="#FBFBF8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TableRow
                        android:background="#00BFA5"
                        android:padding="20dp"
                        android:id="@+id/tbrowbcvtkh"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvtenkhbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="5"
                            android:text="Khách hàng"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvtentdvbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="TDV"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvvtbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Số Lần VT"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvdhbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Đơn hàng"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvhinhanhbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Hình ảnh"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                        <TextView
                            android:freezesText="true"
                            android:id="@+id/tvdtbcvtkh"

                            android:textColor="#FFFFFA"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:text="Doanh thu"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp">

                        </TextView>

                    </TableRow>

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>