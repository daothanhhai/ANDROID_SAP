<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_baocaodtcntk">

    <LinearLayout
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_weight="1"
            android:id="@+id/edittexttndtcntk"
            android:hint="Từ ngày"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edittextdndtcntk"
            android:hint="Đến Ngày"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName" />

        <AutoCompleteTextView
            android:layout_weight="8"
            android:id="@+id/actdtcntk"
            android:textSize="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:hint="Ma Đt"
            android:text="" />

        <ImageView
            android:layout_weight="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imagedtcntk"
            android:padding="5dp"
            android:src="@drawable/baseline_keyboard_arrow_down_black_18dp"/>

        <Button
            android:layout_weight="0"
            android:background="@drawable/botronsearch"
            android:id="@+id/buttonbcdtcntk"
            android:text="Xem BC"
            android:layout_width="50dp"
            android:layout_height="50dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I.KẾ HOẠCH - THỰC HIỆN GAM HÀNG"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/tbdtcntk"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_alignParentStart="true"
                    android:stretchColumns="*"
                    android:background="#FBFBF8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TableRow
                        android:id="@+id/tbrdtcntk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvcndtcntk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chi Nhánh"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvkhopcdtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="KH OPC"
                            android:typeface="sans"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvthopcdtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TH OPC"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"

                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvptkhopcdtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="% KH OPC"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/tvkhcondtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="KH CỒN"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvthcondtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TH CỒN"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvptkhcondtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="% KH CỒN"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvkhsuidtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="KH SỦI"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvthsuidtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="TH SỦI"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvptkhsuidtcntk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="% KH SỦI"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />


                    </TableRow>

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="II.THỰC HIỆN THEO LOẠI KHÁCH HÀNG"
        android:textStyle="bold">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TableLayout
                    android:id="@+id/tb1dtcntk"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    android:layout_alignParentStart="true"
                    android:stretchColumns="*"
                    android:background="#FBFBF8"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">


                    <TableRow
                        android:id="@+id/tbr1dtcntk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã Loại KH"
                            android:layout_weight="1"
                            android:textSize="12dp"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Loại KH"
                            android:typeface="sans"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Doanh Thu"
                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"

                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Khoán"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />
                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tỷ Lệ"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tỷ Lệ Cơ Cấu"

                            android:textSize="12dp"
                            android:textAlignment="center"
                            android:textColor="#0626DC"
                            android:background="@drawable/border"
                            android:textStyle="bold" />




                    </TableRow>

                </TableLayout>
            </ScrollView>
        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>