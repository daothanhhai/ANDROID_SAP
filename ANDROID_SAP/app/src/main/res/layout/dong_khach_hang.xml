<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_weight="10"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:weightSum="10"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:id="@+id/txttenkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Khách hàng">
        </TextView>

        <TextView
            android:layout_weight="2"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:id="@+id/txtsodtkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điện thoại">
        </TextView>
        <TextView
            android:layout_weight="2"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:id="@+id/txtckttkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CKTT">
        </TextView>

        <TextView
            android:layout_weight="2"
            android:textSize="12dp"
            android:textStyle="bold"
            android:textColor="#3F51B5"
            android:id="@+id/txtcktmkh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CKTM">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:weightSum="10"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#121200"
            android:id="@+id/txttendt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đối tác">
        </TextView>
        <TextView
            android:paddingLeft="30dp"
            android:textAlignment="center"
            android:layout_weight="6"
            android:textSize="10dp"
            android:textColor="#121200"
            android:id="@+id/txtdiachi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:weightSum="10"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="4"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textColor="#121200"
            android:id="@+id/txtmst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã số thuế">
        </TextView>

    </LinearLayout>


</LinearLayout>