<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <HorizontalScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">


            <TextView
                android:id="@+id/txtsohdcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="sohd">

            </TextView>

            <TextView
                android:id="@+id/txtngayhdcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="30dp"
                android:text="ngayhd">

            </TextView>

            <TextView
                android:id="@+id/txtmadtcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="madt">

            </TextView>

            <TextView
                android:id="@+id/txttendtcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:textAlignment="center"
                android:text="tendt">

            </TextView>

            <TextView
                android:id="@+id/txttiengochdcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:textColor="#F44336"
                android:text="tiengoc">

            </TextView>

            <TextView
                android:id="@+id/txttiennohdcnkh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:textColor="#03A9F4"
                android:text="tienno">

            </TextView>

            <CheckBox
                android:text="Code"
                android:id="@+id/checknoptrucodekm"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:layout_weight="0.1"></CheckBox>


            <CheckBox
                android:id="@+id/checkthunokh"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_weight="0.1"></CheckBox>

            <EditText
                android:focusable="true"
                android:id="@+id/edittextthuno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:hint="Tiền Trả"
                android:inputType="numberDecimal"
                android:layout_weight="1">

            </EditText>


            <EditText
                android:focusable="true"
                android:id="@+id/editghichuttgh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:hint="ghi chú"
                android:inputType="text"
                android:layout_weight="1">

            </EditText>


            
        </LinearLayout>

<!--    </HorizontalScrollView>-->


</LinearLayout>