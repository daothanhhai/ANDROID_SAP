<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:padding="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageviewgiohang"/>
    <TextView
        android:id="@+id/textviewtenspgh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/imageviewgiohang"
        android:text="Tên"
        android:textColor="#ff00"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textgiaspgh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textviewtenspgh"


        android:layout_toRightOf="@id/imageviewgiohang"
        android:text="Giá Sp"
        android:textColor="#2196F3"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttontruspgh"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="116dp"
        android:background="#FBFBF2"
        android:text="-"
        android:textColor="#2196F3" />

    <Button
        android:id="@+id/buttoncongspgh"
        android:layout_width="46dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="40dp"
        android:background="#FDFDF5"
        android:text="+"
        android:textColor="#2196F3" />
    <TextView
        android:id="@+id/textViewslspgh"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="41dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="80dp"
        android:text="0" />
</RelativeLayout>